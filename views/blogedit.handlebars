<div class="row cols-12 col-md-12 col-lg-12 col-xl-12 ">
  <div class =' cols-12 col-md-12 col-lg-12 col-xl-12'>
    <h2>Post Blog</h2>

    <form class="form blog-post" autocomplete="off">
      <div class="form-group">
        <label for="blog-title"> Title </label>
        <input class="form-input" type="text" id="blog-title-keyed" value= "{{blog.title}}"/>
      </div>
      <div class="form-group">
        <label for="blog-details"> Description </label>
        <textarea class="form-input" type="text" id="blog-details-keyed">{{blog.description}}</textarea>
      </div>
      <div class="form-group row button-group">
        <button class="btn pst-btn blg-btn blog-update" type="submit"> Update </button>
        <button class="btn pst-btn blg-btn blog-delete" type="submit"> Delete </button>
      </div>
    </form>
  </div>

</div>

<script src="/js/blogedit.js"></script>